{
  "name": "simple_api_template",
  "version": "1.0.0",
  "description": "Template for building small api services",
  "main": "index.js",
  "keywords": [
    "template",
    "api",
    "backend"
  ],
  "author": "Matias J Stefanutti",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon index.ts",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "NODE_ENV=test jest",
    "test:integration": "NODE_ENV=test cucumber-js -p backend",
    "start": "NODE_ENV=production node dist/index",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "lint": "eslint src/**/*.ts{,x}",
    "lint-fix": "eslint src/**/*.ts{,x} --fix",
    "seedDB": "node seedDb.js "
  },
  "dependencies": {
    "@cucumber/cucumber": "^8.6.0",
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-promise-router": "^4.1.1",
    "express-validator": "^6.14.1",
    "glob": "^8.0.3",
    "helmet": "^6.0.0",
    "http-status": "^1.5.2",
    "mongodb": "^4.6.0",
    "uuid": "^8.3.2",
    "uuid-validate": "^0.0.3",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/glob": "^8.0.0",
    "@types/jest": "^27.5.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@types/uuid-validate": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "faker": "^5.5.3",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  }
}
